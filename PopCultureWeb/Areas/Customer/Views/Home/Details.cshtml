@model ShoppingCart

<form class="content" method="post" style="height: 100vh">
    <input hidden asp-for="ProductId" />
    <div class="row">
        <div class="rounded border p-1 col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 d-flex align-items-center justify-content-center mb-2" style="height: 18rem; overflow:hidden">
            <img src="@Model.Product.ImageUrl" class="card-img rounded" style="width:100%" />
        </div>
        <div class="col-12 col-sm-12 col-md-8 col-lg-8 col-xl-8 ps-3 ps-sm-0 ps-md-4 ps-lg-4 ps-xl-5">
            <p class="badge bg-dark text-light">@Model.Product.BrandName</p>
            <h1 class="">@Model.Product.Name</h1>
            <p class=""><b>Category:</b> @Model.Product.Category.Name</p>
            <p class=""><b>Wear Type:</b> @Model.Product.WearType.Name</p>
            <p class=""><b>Size:</b> @Model.Product.Size</p>
            <h4 class=""><b>Price (USD):</b> @Model.Product.Price</h4>
            <p class="mt-3"><b>Description:</b></p>
            <p>@Html.Raw(Model.Product.Description)</p>
            <div class="d-flex align-items-center">
                <h4 class="me-2">Count</h4>
               
                    <div class="btn-group rounded-3" role="group" style="border: 1px solid black">
                        <input type="button" class="btn btn-dark" onclick="decrementValue()" value="-" />
                        <input type="number" class="border-0 text-center" style="width: 3rem; outline: none" asp-for="Count" id="number" />
                        <input type="button" class="btn btn-dark" onclick="incrementValue()" value="+" />
                    </div>
            </div>
           
            <div class="mt-5">
                <button type="submit" value="Add to Cart" class="btn btn-dark px-5"><i class="bi bi-bag me-1"></i> Add to Cart</button>
                <a class="btn btn-outline-dark" asp-action="Index">Back</a>
            </div>
            
        </div>
        
    </div>
</form>

@*
comments
*@

@section Scripts {
    <script type="text/javascript">
        function incrementValue() {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            if (value < 10) {
                value++;
                document.getElementById('number').value = value;
            }
        }
        function decrementValue() {
            var value = parseInt(document.getElementById('number').value, 10);
            value = isNaN(value) ? 0 : value;
            if (value > 1) {
                value--;
                document.getElementById('number').value = value;
            }

        }
    </script>
}
